# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5175,http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bellaprep

# Redis (for Bull Queue and Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=your-32-char-encryption-key-1234

# AWS Configuration (for Lambda deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@bellaprep.com
SENDGRID_FROM_NAME=BellaPrep

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Google Calendar
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/calendar/google/callback

# Microsoft Calendar
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/calendar/microsoft/callback

# File Storage (S3 or local)
STORAGE_TYPE=local # or 's3'
AWS_S3_BUCKET=bellaprep-files
AWS_S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_MFA=true
ENABLE_PLAID=true
ENABLE_CALENDAR_SYNC=true
